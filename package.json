{
  "name": "team-task-manager",
  "version": "1.0.0",
  "description": "A lightweight Kanban-style team task manager with real-time collaboration",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "frontend:dev": "cd frontend && npm start",
    "backend:install": "cd backend && npm install",
    "frontend:install": "cd frontend && npm install",
    "install-all": "npm install && npm run backend:install && npm run frontend:install",
    "build": "cd frontend && npm run build",
    "test": "cd backend && npm test && cd ../frontend && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/team-task-manager.git"
  },
  "keywords": [
    "kanban",
    "task-manager",
    "team-collaboration",
    "real-time",
    "react",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT"
}